#!/usr/bin/env node

// WIP

'use strict';

var argv = require('minimist')(process.argv.slice(2));
var inquirer = require('inquirer');
var M = require('bitcore-mnemonic');
var m = new M();

if (argv.s) {
  var questions = [{
    name: 'passphrase',
    message: 'Enter a passphrase'
  }];

  inquirer.prompt(questions, function(answers) {
    console.log(answers);
  });
} else {
  console.log(argv);
  console.log(m.toString());
}

